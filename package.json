{
  "name": "imgxplain",
  "version": "0.1.0",
  "description": "Imgxplain is a tool designed to explain images with an audio description and timed actions",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/wavesurfer.js": "3.3.0",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "canvas": "^2.6.1",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.1.0",
    "jsdom": "^16.3.0",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "~3.9.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "clean": "rm -rf public/build/",
    "compile": "npx tsc -b --verbose",
    "postcompile": "./scripts/npm-post-compile.sh && webpack public/build/*.js -o public/dist/bundle.js && npm run clean",
    "lint": "npx eslint **/*.ts",
    "lint-fix": "npx eslint --fix **/*.ts",
    "format": "npx prettier --write **/*.ts .eslintrc.json *.json public/css/**/*",
    "format-check": "npx prettier --check **/*.ts .eslintrc.json .*.json public/css/**/*",
    "test": "jest"
  },
  "author": "norbjd",
  "license": "GPL-3.0-only"
}
